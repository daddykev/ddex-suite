{
  "name": "ddex-parser",
  "version": "0.1.0",
  "description": "High-performance DDEX XML parser with native bindings",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release && npm run build:ts",
    "build:debug": "napi build --platform && npm run build:ts",
    "build:ts": "tsc",
    "build:napi": "napi build --platform --release",
    "prebuild": "prebuildify --napi --strip --target 18.0.0 --target 20.0.0 --target 22.0.0",
    "prebuild:all": "npm run prebuild -- --arch x64 --arch arm64",
    "prepublishOnly": "napi prepublish -t npm && npm run build:ts",
    "test": "npm run build:napi && npm run build:ts && jest",
    "test:only": "jest",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ddex",
    "xml",
    "parser",
    "music",
    "metadata",
    "ern",
    "native",
    "rust"
  ],
  "author": "Kevin Marques Moo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daddykev/ddex-parser.git"
  },
  "files": [
    "dist",
    "prebuilds",
    "index.node",
    "binding.gyp",
    "README.md"
  ],
  "napi": {
    "name": "ddex-parser",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "aarch64-unknown-linux-musl",
        "aarch64-apple-darwin",
        "x86_64-pc-windows-gnu"
      ]
    }
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prebuildify": "^6.0.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  }
}
