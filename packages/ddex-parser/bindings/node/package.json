{
  "name": "ddex-parser",
  "version": "0.1.0",
  "description": "High-performance DDEX XML parser with native and WASM bindings",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "build:native": "napi build --platform --release",
    "build:all": "npm run build:native && npm run build:ts",
    "test": "node test-manual.js",
    "prepublishOnly": "npm run build:ts"
  },
  "browser": "dist/browser.js",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "browser": "./dist/browser.js",
      "types": "./dist/index.d.ts"
    },
    "./wasm": {
      "import": "./wasm/ddex_parser.js",
      "types": "./wasm/ddex_parser.d.ts"
    }
  },
  "keywords": [
    "ddex",
    "xml",
    "parser",
    "music",
    "metadata",
    "ern",
    "native",
    "rust",
    "wasm"
  ],
  "author": "Kevin Marques Moo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/daddykev/ddex-suite.git",
    "directory": "packages/ddex-parser"
  },
  "homepage": "https://github.com/daddykev/ddex-suite/tree/main/packages/ddex-parser",
  "bugs": {
    "url": "https://github.com/daddykev/ddex-suite/issues"
  }
}