# Cargo.toml (root)
[workspace]
members = [
    "core",
    "bindings/node",
    "bindings/python",
    "bindings/wasm",
]
resolver = "2"

[workspace.package]
version = "0.1.0"
authors = ["Kevin Marques Moo"]
edition = "2025"
license = "MIT"
repository = "https://github.com/ddex-parser/ddex-parser"

[workspace.dependencies]
quick-xml = { version = "0.36", features = ["serialize", "overlapped-lists"] }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
thiserror = "1.0"
chrono = { version = "0.4", features = ["serde"] }
tracing = "0.1"
anyhow = "1.0"
uuid = { version = "1.10", features = ["v4", "serde"] }  # Add this line